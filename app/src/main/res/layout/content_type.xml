<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.janaagraha.cp_jccd.TypeActivity"
    tools:showIn="@layout/activity_type"
    android:background="#ffff00">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Type of Activity: "
        android:textSize="25dp"
        android:id="@+id/Select_Activity_Type"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Spinner_ActivityType"
        android:layout_below="@+id/Select_Activity_Type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/editText_other"
        android:layout_below="@+id/Spinner_ActivityType"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/radioButton"
        android:layout_toEndOf="@+id/radioButton"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Topics Discussed: "
        android:id="@+id/Select_Plan"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_below="@+id/editText_other"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chain Snatching"
        android:id="@+id/checkBox"
        android:textColor="#000000"
        android:layout_alignTop="@+id/checkBox2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House Break Theft"
        android:id="@+id/checkBox2"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FinancialTheft"
        android:id="@+id/checkBox3"
        android:textColor="#000000"
        android:layout_above="@+id/checkBox5"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SocialAbuse"
        android:id="@+id/checkBox4"
        android:textColor="#000000"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SeniorCitizenAbuse"
        android:id="@+id/checkBox5"
        android:textColor="#000000"
        android:layout_alignTop="@+id/checkBox6"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PettyTheft"
        android:id="@+id/checkBox6"
        android:textColor="#000000"
        android:layout_below="@+id/checkBox4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other:"
        android:id="@+id/checkBox7"
        android:textColor="#000000"
        android:layout_alignTop="@+id/editText_checkOther"
        android:layout_alignRight="@+id/checkBox6"
        android:layout_alignEnd="@+id/checkBox6" />

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Next"
        android:id="@+id/button"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_marginBottom="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox5" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_checkOther"
        android:visibility="visible"
        android:autoText="false"
        android:textColor="#000000"
        android:layout_above="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other:"
        android:id="@+id/radioButton"
        android:layout_below="@+id/Spinner_ActivityType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />



</RelativeLayout>
